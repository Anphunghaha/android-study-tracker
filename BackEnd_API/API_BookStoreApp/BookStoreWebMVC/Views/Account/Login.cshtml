@model BookStoreWebMVC.Models.ViewModel.LoginViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Admin Login</h2>
            <p class="text-muted">Sign in to manage your bookstore</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                    <input asp-for="Email" class="form-control form-control-lg rounded-end" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger d-block mt-1"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" type="password" class="form-control form-control-lg rounded-end" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="text-danger d-block mt-1"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">Đăng nhập</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 rounded-pill text-center" role="alert">@ViewBag.Error</div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, #e0e7ff, #a3bffa);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card {
        border: none;
        border-radius: 20px;
        background: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }
    .form-control {
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-control:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 10px rgba(79, 70, 229, 0.2);
    }
    .input-group-text {
        border: 1px solid #ced4da;
        border-right: none;
        background: #f8f9fa;
    }
    .btn-primary {
        background: linear-gradient(90deg, #4f46e5, #7c3aed);
        border: none;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.2s ease;
    }
    .btn-primary:hover {
        background: linear-gradient(90deg, #4338ca, #6d28d9);
        transform: scale(1.05);
    }
    .alert-danger {
        font-size: 0.85rem;
        border: none;
        background: #fee2e2;
        color: #dc2626;
    }
    .bi {
        color: #6b7280;
    }
</style>