@model BookStoreWebMVC.Models.ViewModel.BookCreateEditViewModel

<h2>Chỉnh sửa sách</h2>

<form asp-action="Edit" method="post">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <input type="hidden" asp-for="Book.BookID" />

    <div class="mb-3">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Book.AuthorId"></label>
        <select asp-for="Book.AuthorId" asp-items="Model.Authors" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Book.CategoryId"></label>
        <select asp-for="Book.CategoryId" asp-items="Model.Categories" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Description"></label>
        <textarea asp-for="Book.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Price"></label>
        <input asp-for="Book.Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Book.Stock"></label>
        <input asp-for="Book.Stock" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Book.ImageUrl"></label>
        <input asp-for="Book.ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
